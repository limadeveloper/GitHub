platform :ios, '10.3'

target 'Github' do
  use_frameworks!
  inhibit_all_warnings!

  # Pods for Github
  pod 'BaseNetworkKit', '~> 1.0'
  pod 'ObservableKit', '~> 1.0'
  pod 'SwiftIconFont', '~> 3.0'
  pod 'SwiftLint', '~> 0.31'

  target 'GithubTests' do
    inherit! :search_paths
    
    # Pods for testing
    pod 'Nimble', '~> 8.0'
    pod 'Quick', '~> 2.0'

  end

end